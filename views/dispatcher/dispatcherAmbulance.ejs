  <script>
    // Assuming you have the fillModal function to fill the modal form with ambulance data
    function fillModal(ambulanceId, type, available, driverId, driverName) {
      // Fill the modal form fields with the ambulance data
      document.getElementById('inputAmbulanceId').value = ambulanceId;
      document.getElementById('inputType').value = type;
      document.getElementById('inputAvailable').value = available;

      // Fetch registered drivers from backend using jQuery AJAX
      $.ajax({
        url: '/get-drivers', // Endpoint to get list of drivers
        type: 'GET',
        success: function (response) {
          console.log('Response from /get-drivers:', response); // Log the response
          var driverSelect = $('#inputDriver');
          // Clear existing options
          driverSelect.empty();
          // Populate dropdown with fetched drivers
          $.each(response, function (index, driver) {
            var option = $('<option></option>');
            option.attr('value', driver._id);
            option.text(driver.name);
            // Set the selected driver based on the provided driverId
            if (driver._id === driverId) {
              option.prop('selected', true);
            }
            driverSelect.append(option);
          });
        },
        error: function (xhr, status, error) {
          console.error('Error fetching drivers:', error); // Log any errors
        }
      });



    }

    // archived
                                               

    document.querySelectorAll('.archive-button').forEach(button => {
  button.addEventListener('click', async (event) => {
    const ambulanceId = event.target.closest('.archive-form').dataset.id; // Get the ambulance ID from the data attribute
    try {
      // Send archive request to the server using POST method
      const response = await fetch(`/archiveA/${ambulanceId}`, {
        method: 'POST'
      });
      if (response.ok) {
        // Remove the row from the table if the request is successful
        const row = document.getElementById(`row_${ambulanceId}`);
        if (row) {
          row.parentNode.removeChild(row);
          document.getElementById('archiveAlert').style.display = 'block';

        }
      } else {
        console.error('Failed to archive ambulance:', response.statusText);
        alert('Failed to archive ambulance. Please try again later.');
      }
    } catch (error) {
      console.error('Error archiving ambulance:', error);
      alert('Error archiving ambulance. Please try again later.');
    }
  });
});


