    <script>

function fillModal(ambulanceId, type, available) {
    // Fill the modal form fields with the ambulance data
    document.getElementById('inputAmbulanceId').value = ambulanceId;
    document.getElementById('inputType').value = type;
    document.getElementById('inputAvailable').value = available;
}


// JavaScript code

function deleteAmbulance(ambulanceId) {
    if (confirm('Are you sure you want to delete this ambulance?')) {
        fetch('/deleteAmbulance/' + ambulanceId, {
            method: 'DELETE'
        })
        .then(response => {
            if (response.ok) {
                // Refresh the page or update the ambulance list as needed
                location.reload(); // Refresh the page after deletion
            } else {
                console.error('Failed to delete ambulance');
            }
        })
        .catch(error => {
            console.error('Error:', error);
        });
    }
}



