    <script>


        // Function to populate the modal with booking request details
        function populateBookingRequestModal(bookingRequestId) {
            // Fetch booking request details from the server
            fetch(`/booking-requests/${bookingRequestId}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Failed to fetch booking request details');
                    }
                    return response.json();
                })
                .then(data => {
                    const bookingRequest = data.bookingRequest;
                    document.getElementById('location').textContent = bookingRequest.location;
                    document.getElementById('contactInfo').textContent = bookingRequest.contactInfo;
                    document.getElementById('urgencyLevel').textContent = bookingRequest.urgencyLevel;
                    document.getElementById('status').textContent = bookingRequest.status;
                    // Convert createdAt to day, month, year format
                    const createdAt = new Date(bookingRequest.createdAt).toLocaleDateString('en-GB', { day: 'numeric', month: 'long', year: 'numeric' });
                    document.getElementById('createdAt').textContent = createdAt;
                    // Show the modal
                    $('#bookingRequestModal').modal('show');
                })
                .catch(error => {
                    console.error('Error fetching booking request details:', error);
                    alert('Failed to fetch booking request details');
                });
        }

        // Event listener for the "View Details" button
        document.addEventListener('click', function (event) {
            if (event.target.matches('.viewDetailButton')) {
                const bookingRequestId = event.target.dataset.bookingRequestId;
                populateBookingRequestModal(bookingRequestId);
            }
        });




