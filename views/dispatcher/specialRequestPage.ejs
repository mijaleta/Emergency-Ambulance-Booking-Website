<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Special Requests</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h1>Special Requests</h1>
    <ul id="specialRequestsList" class="list-group mt-3">
      <!-- Special requests will be appended here dynamically -->
    </ul>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      fetch('/specialRequests')
        .then(response => response.json())
        .then(specialRequests => {
          const specialRequestsList = document.getElementById('specialRequestsList');
          specialRequests.forEach(request => {
            const listItem = document.createElement('li');
            listItem.classList.add('list-group-item');
            listItem.textContent = request.requestText;
            specialRequestsList.appendChild(listItem);
          });
        })
        .catch(error => {
          console.error('Error fetching special requests:', error);
        });
    });
  </script>
</body>
</html>
