<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dispatched Detail and SMS</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: Arial, sans-serif;
    }

    .container {
      max-width: 500px;
      margin: 50px auto;
    }

    .form-group {
      margin-bottom: 20px;
    }

    .form-label {
      font-weight: bold;
      width: 100px;
      display: inline-block; 
    }

    .form-control {
      border-radius: 6px;
      width: calc(100% - 120px); 
    }

    .btn-send {
      border-radius: 12px;
      background-color: #007bff;
      color: #fff;
      margin-left: 40%;
      font-size: 20px;
      transition: background-color 0.3s;
    }

    .btn-send:hover {
      background-color: #0056b3;
    }

    h2 {
      color: #007bff;
      text-align: center;
      margin-bottom: 20px;
    }

    .btn-reset {
      border-radius: 20px;
      background-color: #007bff;
      color: #fff;
      transition: background-color 0.3s;
    }

    .btn-reset:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
  <div class="container">
    <form  action="/send-sms" method="post">
      <h2>Realtime SMS Details</h2>
      <div class="form-group">
        <label for="recipients" class="form-label">Recipients</label>
        <input type="text" class="form-control" id="recipients" name="recipients" placeholder="Enter recipient numbers separated by commas" value="<%= mobile_number%>,<%= nmobile_number%>,<%= bookingRequests[0].contactInfo%> " required>
      </div>
      <div class="form-group">
        <label for="message" class="form-label">Message</label>
        <textarea class="form-control" id="messageText" name="messageText" rows="5" placeholder="Enter your message"></textarea>
      </div>
      <button type="submit" class="btn btn-send btn-block">Send SMS</button>
    </form>
  </div>

  <script>
    // Generate the message based on booking request details
  
    var messageForFirstTwo = `<% if (bookingRequests.length > 0) { %>
        Contact Info: <%= bookingRequests[0].contactInfo %>
        Address: <%= bookingRequests[0].address %>
        Patient Condition: <%= bookingRequests[0].patient_condition %>
        Emergency Type: <%= bookingRequests[0].emergency_type %>
    <% } else { %>
        No booking requests found.
    <% } %>`;
    var messageForThird = "This is a different message for the third recipient.";

    document.getElementById('messageText').value = messageForFirstTwo;

    document.getElementById('smsForm').value = messageForThird;
      var recipients = document.getElementById('recipients').value.split(',');
      recipients = recipients.map(recipient => recipient.trim());

      if (recipients.length !== 3) {
        alert("Please enter exactly three recipient numbers.");
        return false;
      }

      var messages = [
        messageForFirstTwo,
        messageForFirstTwo,
        messageForThird
      ];

      recipients.forEach((number, index) => {
        let message = messages[index];
        console.log(`Sending message to ${number}: ${message}`);
        // Simulate sending the SMS
        // alert(`Message to ${number}: ${message}`);
      });

      // Optionally, submit the form data via an AJAX request here

      return false;
    
  </script>

  <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
