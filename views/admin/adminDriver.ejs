<script>
// Function to fill the modal with user details
function fillModal(userId, name, mobileNumber, username, email, role) {
    document.getElementById('inputUserId').value = userId; // Set the hidden input value
    document.getElementById('inputName').value = name;
    document.getElementById('inputPhone').value = mobileNumber;
    document.getElementById('inputUsername').value = username;
    document.getElementById('inputEmail').value = email;
    document.getElementById('inputState').value = role;
}



    // this is for the delete operation on the user of the system 
    function deleteUser(userId) {
    if (confirm('Are you sure you want to delete this user?')) {
        fetch('/deleteUser/' + userId, {
            method: 'DELETE'
        })
        .then(response => {
            if (response.ok) {
                // Refresh the page or update the user list as needed
                location.reload(); // Refresh the page after deletion
            } else {
                console.error('Failed to delete user');
            }
        })
        .catch(error => {
            console.error('Error:', error);
        });
    }
}

