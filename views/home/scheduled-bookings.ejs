<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scheduled Bookings</title>
</head>
<body>
    <h1>Scheduled Bookings</h1>
    <table>
        <thead>
            <tr>
                <th>Day</th>
                <th>Ambulance</th>
                <th>Driver</th>
                <th>Nurse</th>
                <th>Time</th>
            </tr>
        </thead>
        <tbody>
            <% let first = true; %>
            <% Object.keys(schedules).forEach(day => { %>
                <% schedules[day].forEach((schedule, index) => { %>
                    <% if (first) { %>
                        <td rowspan="<%= schedules[day].length %>"><%= day %></td>
                        <% first = false; %>
                    <% } %>
                    <tr>
                        <td><%= schedule.ambulance.type %></td>
                        <td><%= schedule.driver.name %></td>
                        <% if (schedule.nurse) { %>
                            <td><%= schedule.nurse.name %></td>
                        <% } else { %>
                            <td>N/A</td>
                        <% } %>
                        <td><%= formatTime(schedule.pickupTime) %></td>
                    </tr>
                <% }); %>
                <% first = true; %>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
